<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/css/style.css">
</head>

<body class="admin-page">
  <header class="admin-header">
    <div class="container">
      <h1>Add Product</h1>
      <div class="admin-nav">
        <a href="/admin" class="btn btn-secondary">Back to Dashboard</a>
      </div>
    </div>
  </header>

  <main class="container">
    <div class="form-container">
      <% if (typeof error !=='undefined' ) { %>
        <div class="alert alert-error">
          <%= error %>
        </div>
        <% } %>

          <form method="POST" action="/admin/add" class="product-form">
            <div class="form-group">
              <label for="name">Product Name *</label>
              <input type="text" id="name" name="name" required
                value="<%= typeof product !== 'undefined' && product ? product.name : '' %>">
            </div>

            <div class="form-group">
              <label for="description">Description</label>
              <textarea id="description" name="description"
                rows="4"><%= typeof product !== 'undefined' && product ? product.description : '' %></textarea>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="price">Price*</label>
                <input type="number" id="price" name="price" step="0.01" min="0" required
                  value="<%= typeof product !== 'undefined' && product ? product.price : '' %>">
              </div>

              <div class="form-group">
                <label for="stock">Stock Quantity</label>
                <input type="number" id="stock" name="stock" min="0" value="0"
                  value="<%= typeof product !== 'undefined' && product ? product.stock : '' %>">
              </div>
            </div>

            <div class="form-group">
              <label for="image">Image URL</label>
              <input type="url" id="image" name="image" placeholder="https://example.com/image.jpg"
                value="<%= typeof product !== 'undefined' && product ? product.image : '' %>">
              <small>Enter the URL of the product image</small>
            </div>

            <div class="form-actions">
              <button type="submit" class="btn btn-primary">Create Product</button>
              <a href="/admin" class="btn btn-secondary">Cancel</a>
            </div>
          </form>
    </div>
  </main>
</body>

</html>